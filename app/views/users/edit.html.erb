<% provide :title, t(".page_title") %>
<% provide :submit, t(".submit") %>
<h1><%= t ".title" %></h1>
<div class="row">
  <div class="mx-auto col-md-6 col-md-offset-3">
    <%= render "form" %>
    <div class="gravatar_edit">
      <%= gravatar_for @user %>
      <a href="https://gravatar.com/emails" target="_blank" rel="noopener noreferrer"><%= t".change" %></a>
    </div>
  </div>
</div>
